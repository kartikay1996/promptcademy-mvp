<div class="prompt-card card" 
  data-haystack="<%= (item.name + ' ' + item.category + ' ' + (item.use_when||'')).toLowerCase() %>" 
  data-vars='<%- JSON.stringify(item.inputs||[]) %>'>
  <div class="flex" style="justify-content:space-between">
    <div>
      <div class="badge"><%= item.category %></div>
      <h3 style="margin-top:6px"><%= item.name %></h3>
      <% if (item.use_when) { %><div class="muted" style="margin-top:4px"><%= item.use_when %></div><% } %>
    </div>
    <div class="flex">
      <button class="btn btn--ghost" data-expand>Show Prompt</button>
      <button class="btn" data-copy>Copy</button>
    </div>
  </div>
  <% if ((item.inputs||[]).length) { %>
    <div class="grid" style="grid-template-columns:repeat(auto-fit,minmax(180px,1fr));margin:14px 0">
      <% (item.inputs||[]).forEach(function(v){ %>
        <div>
          <label><%= v %></label>
          <input name="<%= v %>" placeholder="Enter <%= v %>">
        </div>
      <% }) %>
    </div>
    <div class="flex" style="justify-content:flex-end;margin-top:6px">
      <button class="btn" data-fill>Fill & Copy</button>
    </div>
  <% } %>
  <pre class="template hidden" style="margin-top:12px;white-space:pre-wrap"><%- item.template %></pre>
</div>