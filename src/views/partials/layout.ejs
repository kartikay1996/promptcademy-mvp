<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= typeof title !== 'undefined' ? title + ' — PromptCademy' : 'PromptCademy' %></title>
  <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Master practical prompting through hands-on lessons and challenges.' %>">
  <meta property="og:title" content="<%= typeof title !== 'undefined' ? title + ' — PromptCademy' : 'PromptCademy' %>">
  <meta property="og:description" content="<%= typeof description !== 'undefined' ? description : 'Master practical prompting through hands-on lessons and challenges.' %>">
  <meta property="og:type" content="website">
  <meta property="og:image" content="/og-image.png">
  <meta property="og:url" content="<%= 'https://promptcademy-mvp.onrender.com' + req.originalUrl %>">
  <meta name="twitter:card" content="summary_large_image">
  <link rel="canonical" href="<%= 'https://promptcademy-mvp.onrender.com' + req.originalUrl %>">
  <link rel="stylesheet" href="/theme-gold.css">
</head>
<body>
  <div id="site-header"><%- include('partials/header') %></div>
  <main id="main" class="pc-page"><%- body %></main>
  <%- include('partials/footer') %>
  <script>
    (function(){var h=document.querySelector('.pc-header');if(!h)return;var on=function(){if(window.scrollY>2)h.classList.add('pc-header--scrolled');else h.classList.remove('pc-header--scrolled')};on();window.addEventListener('scroll',on,{passive:true});})();
    (function(){var btn=document.querySelector('.pc-menu-toggle');var nav=document.getElementById('pc-nav');if(!btn||!nav)return;btn.addEventListener('click',function(){var o=nav.classList.toggle('is-open');btn.setAttribute('aria-expanded',o?'true':'false');document.documentElement.classList.toggle('pc-menu-open',o)});})();
  </script>
</body>
</html>
