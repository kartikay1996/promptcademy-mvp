<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= (typeof title !== 'undefined' && title) ? title : 'PromptCademy' %></title>
  <link rel="stylesheet" href="/css/app.css" />
</head>
<body>
  <header>
    <div class="header-inner container">
      <div class="brand">
        <div class="logo-dot"></div>
        <div class="brand-title">PromptCademy</div>
      </div>
      <nav>
        <% if (user) { %>
          <a href="/catalog">Lessons</a>
          <a href="/dashboard">My Progress</a>
          <a href="/library">Library</a>
          <a href="/challenge">Challenge</a>
          <a href="/settings">Settings</a>
          <a href="/logout">Log out</a>
        <% } else { %>
          <a href="/catalog">Lessons</a>
          <a href="/login">Log in</a>
          <a href="/signup">Sign up</a>
        <% } %>
      </nav>
    </div>
  </header>
  <main><div class="container"><%- body %></div></main>
  <footer>© <%= new Date().getFullYear() %> PromptCademy — Learn by doing</footer>
</body>
</html>
