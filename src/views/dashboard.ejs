<h3 style="margin-top:18px">Your Progress</h3>
<div class="card">
  <div class="progress"><span style="width:<%= progressPct %>%"></span></div>
  <p class="small muted" style="margin-top:8px"><%= completedCount %>/<%= totalCount %> lessons completed</p>
</div>

<div class="tabs">
  <a class="tab <%= (activeCat==='All')?'active':'' %>" href="/dashboard">All</a>
  <a class="tab <%= (activeCat==='Marketing')?'active':'' %>" href="/dashboard?cat=Marketing">Marketing</a>
  <a class="tab <%= (activeCat==='HR')?'active':'' %>" href="/dashboard?cat=HR">HR</a>
  <a class="tab <%= (activeCat==='Finance')?'active':'' %>" href="/dashboard?cat=Finance">Finance</a>
</div>

<div class="grid">
  <% lessons.forEach(l => { %>
    <div class="card card-lesson">
      <span class="badge"><%= l.category %></span>
      <h3><%= l.title %></h3>
      <p class="muted"><%= l.summary %></p>
      <div style="display:flex;gap:8px;flex-wrap:wrap">
        <a class="btn" href="/lesson/<%= l.id %>">Open</a>
        <% if (completedIds.includes(l.id)) { %>
          <span class="tag">Completed âœ…</span>
        <% } %>
      </div>
