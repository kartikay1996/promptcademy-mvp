<h2>Welcome back!</h2>

<%
  const hasDaily = daily && typeof daily === 'object' && daily.title;
  const safeLessons = Array.isArray(lessons) ? lessons : [];
  const safeCompletedIds = Array.isArray(completedIds) ? completedIds : [];

  const safeTotal = Number.isFinite(totalCount) ? totalCount : safeLessons.length;
  const safeCompleted = Number.isFinite(completedCount) ? completedCount : safeCompletedIds.length;
  const safePct = Number.isFinite(progressPct) ? progressPct
                  : (safeTotal ? Math.round((safeCompleted / safeTotal) * 100) : 0);
%>

<div class="card" style="display:flex;justify-content:space-between;align-items:center;gap:16px;flex-wrap:wrap">
  <div>
    <div class="streak">ðŸ”¥ Daily Challenge</div>
    <div class="muted"><%= hasDaily ? daily.title : 'No daily lesson available' %></div>
  </div>
  <div>
    <% if (hasDaily && daily.id) { %>
      <a class="btn coral" href="/playground/<%= daily.id %>">Take todayâ€™s challenge</a>
    <% } else { %>
      <a class="btn disabled" href="#" aria-disabled="true">No challenge yet</a>
    <% } %>
  </div>
</div>

<h3 style="margin-top:18px">Your Progress</h3>
<div class="card">
  <div class="progress"><span style="width:<%= safePct %>%"></span></div>
  <p class="small muted" style="margin-top:8px"><%= safeCompleted %>/<%= safeTotal %> lessons completed</p>
</div>

<h3 style="margin-top:18px">All Lessons</h3>
<div class="grid">
  <% if (!safeLessons.length) { %>
    <div class="card">No lessons yet. Check back soon.</div>
  <% } %>
  <% safeLessons.forEach(l => { %>
    <div class="card card-lesson">
      <span class="badge"><%= l.category || 'General' %></span>
      <h3><%= l.title || ('Lesson #' + (l.id ?? '')) %></h3>
      <p class="muted"><%= l.summary || '' %></p>
      <div style="display:flex;gap:8px;flex-wrap:wrap">
        <a class="btn" href="/lesson/<%= l.id %>">Open</a>
        <% if (safeCompletedIds.includes(l.id)) { %>
          <span class="tag">Completed âœ…</span>
        <% } %>
      </div>
    </div>
  <% }) %>
</div>
