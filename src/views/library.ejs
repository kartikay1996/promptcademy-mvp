<% title = title || 'Prompt Library' %>
<section class="container">
  <h1>Prompt Library</h1>
  <div class="muted">Curated marketing prompts for small businesses + your saved prompts.</div>
  <div class="space"></div>
  <div class="flex" style="justify-content:space-between;align-items:center">
    <div class="flex">
      <button class="tab-btn btn active" data-target="tab-curated">Curated</button>
      <button class="tab-btn btn btn--ghost" data-target="tab-mine">My Library</button>
    </div>
    <input id="search" placeholder="Search prompts..." style="max-width:280px">
  </div>
  <div class="space"></div>
  <div id="tab-curated" class="tab-panel">
    <div class="grid" style="grid-template-columns:repeat(auto-fit,minmax(320px,1fr))">
      <% (curated||[]).forEach(function(item){ %>
        <%- include('partials/prompt-card', { item }) %>
      <% }) %>
    </div>
  </div>
  <div id="tab-mine" class="tab-panel hidden">
    <% if ((mine||[]).length === 0) { %>
      <div class="card"><div class="muted">You haven’t saved any prompts yet. Create or save from lessons, then they will appear here.</div></div>
    <% } else { %>
      <div class="grid" style="grid-template-columns:repeat(auto-fit,minmax(320px,1fr))">
        <% mine.forEach(function(item){ %>
          <%- include('partials/prompt-card', { item }) %>
        <% }) %>
      </div>
    <% } %>
  </div>
  <div id="toast" class="card hidden" style="position:fixed;right:16px;bottom:16px">✅ Copied to clipboard</div>
</section>
<script src="/js/library.js"></script>